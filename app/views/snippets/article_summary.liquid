<article class="{% cycle ' ', ' ', 'last' %}">
  <h1><a href="/blog/{{ article_summary._permalink }}">{{ article_summary.title }}</a></h1>

  <div class="date">{{ article_summary.posted_at | localized_date: '%A %d %B %Y', 'en' }}</div>

  <div class="content">
    {{ article_summary.body | strip_html | truncate: 200 }}
  </div>

  <div class="read-more">
    <a href="/blog/{{ article_summary._permalink }}">Read more</a>
  </div>
</article>